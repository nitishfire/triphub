            <svg width="1900" height="980" class="svg1">
                <rect x="50" y="20" rx="20" ry="20" width="1475" height="670" style="fill:white;stroke:grey;stroke-width:1;opacity: 10;" />
            </svg>   
        </div>

        <div class="prpimg">
            <img class="prpimg1" src="../Home_Page_Images/purplebg.png"/>
        </div>


            <div class="nav">
                <div class="logoimg">
                    <img class="logo" src="Home_Page_Images/Transparent Triphub Logo.png" alt="TripHub Logo"/>
                </div>
                <div class="cname">
                    <a href="./HotelHomePage">TripHub</a>
                </div>
                <div class="homebtn">
                    <ul>
